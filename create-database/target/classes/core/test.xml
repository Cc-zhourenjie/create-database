<?xml version="1.0" encoding="UTF-8" ?>

<settings>
    <!--  创建数据表  -->
    <setting name="create_table">
        create table #{table_name}(
            #{field_name} #{field_type} primary key not null
        ) COMMENT = '#{remark}';
    </setting>

    <!--  创建字段  -->
    <setting name="create_field">
        alter table #{table_name} add #{field_name} #{field_type};
    </setting>

    <!--  判断是否可以为空  -->
    <setting name="is_null">
        #{is_null}
    </setting>

    <!--  添加字段或者数据表注释/备注  -->
    <setting name="remark">
        COMMENT = '#{remark}';
    </setting>

</settings>

